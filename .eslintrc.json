{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["google", "plugin:prettier/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "no-var": "error",
    "require-jsdoc" : 0,
    "requireForBlockBody": "off",
    "prefer-promise-reject-errors": "off",
    "prettier/prettier": ["error"]
  }
}
